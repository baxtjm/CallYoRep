<%= render 'partials/sub_pages' %>



<div id = "overall" >
  <%@info.each do |rep|%>
  <div>
    <figure>
      <% unless rep.last == "http://wsd-cornelius.s3-website-us-west-2.amazonaws.com/images/candidates/donaldtrump.jpg"%>
      <%@bioguide_id = rep.last%>
      <img src="https://theunitedstates.io/images/congress/225x275/<%=@bioguide_id%>.jpg" alt="Congress">
      <%else%>
      <img src= <%=rep.last%> alt="POTUS">
      <%end%>
      <figcaption>
        <%rep.each do |x|%>
        <%if x == rep.last%>
        <%elsif x == rep[-2]%>
        <%=x  %>
        <%else%>
        <%=x  %>,&nbsp;
        <%end%>
        <%end%>
      </figcaption>
    </figure>
  </div>
  <%end%>
</div>

<div id="frontform">

<%= form_tag("/reps", method: :post) do %>
<%= select_tag("rep_choice", options_for_select(@phones)) %>
<%= select_tag("stance", options_for_select(@stances)) %>
<%= hidden_field_tag('zip', @zip)%>
<%= hidden_field_tag('email', @email)%>
<%=submit_tag "Submit" %>
<%end%>

</div>
