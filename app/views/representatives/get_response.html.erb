<%= render 'partials/sub_pages' %>


<div id = "overall" >
  <%@info.each do |rep|%>
  <div>
    <figure>
      <img src="https://theunitedstates.io/images/congress/225x275/<%=rep.last%>.jpg" alt="">
      <figcaption>
        <%rep.each do |x|%>
        <%if x == rep.last%>
        <%elsif x == rep[-2]%>
        <%=x  %>
        <%else%>
        <%=x  %>,&nbsp;
        <%end%>
        <%end%>
      </figcaption>
    </figure>
  </div>
  <%end%>
</div>

<div>

<%= form_tag("/reps", method: :post) do %>
<%= select_tag("rep_choice", options_for_select(@phones)) %>
<%= select_tag("stance", options_for_select(@stances)) %>
<%= hidden_field_tag('zip', @zip)%>
<%= hidden_field_tag('email', @email)%>
<%=submit_tag"Submit"%>
<%end%>

</div>
